<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="utc.pokerut.client.ihmmain.controllers.LogoutController">
    <VBox alignment="CENTER" style="-fx-background-color: #E3E3E3;" HBox.hgrow="ALWAYS">
      <children>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Vous avez été déconnecté(e) !" textAlignment="CENTER">
            <VBox.margin>
               <Insets bottom="50.0" />
            </VBox.margin>
            <font>
               <Font size="24.0" />
            </font></Text>
         <HBox alignment="CENTER" spacing="100.0">
            <children>
               <Button mnemonicParsing="false" onAction="#reconnect" text="Se reconnecter" HBox.hgrow="ALWAYS" />
               <Button mnemonicParsing="false" onAction="#closeApp" text="Quitter" HBox.hgrow="ALWAYS" />
            </children>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
         </HBox>
      </children></VBox>

</HBox>
