      <VBox BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="utc.pokerut.client.ihmmain.controllers.GameListController" spacing="30">
         <children>
            <HBox alignment="CENTER"  spacing="80.0" >
               <children>
                  <Label text="Tables disponibles :">
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <Button fx:id="createGameButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#createGame" style="-fx-background-color: #E3E3E3;" text="Créer une table" textAlignment="CENTER" />

               </children>
            </HBox>
              <ScrollPane disable="false" visible="true">
                  <content>
                      <TableView fx:id="myTableView"  style="-fx-border-color: #000000;">
                          <columns>
                              <TableColumn fx:id="id"  style="-fx-background-color: #E3E3E3;" text="ID" visible="false" />
                              <TableColumn fx:id="name"  style="-fx-background-color: #E3E3E3;" text="NOM" />
                              <TableColumn fx:id="creator"  style="-fx-background-color: #E3E3E3;" text="CREATEUR" />
                              <TableColumn fx:id="nbRounds"  style="-fx-background-color: #E3E3E3;" text="NB TOURS MAX" />
                              <TableColumn fx:id="minBet" style="-fx-background-color: #E3E3E3;" text="MISE MIN" />
                              <TableColumn fx:id="nbPlayers"  style="-fx-background-color: #E3E3E3;" text="PARTICIPANTS" />
                              <TableColumn fx:id="status" style="-fx-background-color: #E3E3E3;" text="STATUT" />
                          </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                      </TableView>
                  </content>
              </ScrollPane>
            <HBox prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Pane prefHeight="200.0" prefWidth="550.0">
                     <children>
                         <Label fx:id="errorMessage" alignment="CENTER" contentDisplay="CENTER" layoutX="360.0" layoutY="80.0" text="Veuillez sélectionner une partie" textAlignment="CENTER" textFill="RED" visible="false">
                             <font>
                                 <Font size="14.0" />
                             </font>
                         </Label>
                        <Button fx:id="joinGameButton" alignment="CENTER_RIGHT" contentDisplay="CENTER" layoutX="450.0" layoutY="25.0" mnemonicParsing="false" onAction="#joinGame" style="-fx-background-color: #E3E3E3;" text="Rejoindre" textAlignment="CENTER" />
                     </children>
                  </Pane>
               </children>
            </HBox>
         </children>
      </VBox>

